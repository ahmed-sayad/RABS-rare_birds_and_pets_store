  <link href="/assets/img/favicon.png" rel="icon">
  <link href="/assets/img/apple-touch-icon.png" rel="apple-touch-icon">
      
    <title>RABS | Update Account</title>
  </head>
  <body>
      
      <!-- header section -->
    <header class="main__header">
      <div class="container">
        <div class="main__header__content">
          <div class="logo">
            <a href="/index/login/search"><img src="/assets/img/hero-logo.png" alt="" /></a>
            <a href="/index/login/search"> <h1 class="logo__title">RABS</h1> </a>
          </div>
          <div class="hotLine__wrapper">
              
            <img src="/assets/img/social-icons/mobile_icon.png" alt="" class="hotline-icon"/>
            <div class="hotline">
              <p>Hotline</p>
              <p>919989</p>
            </div>
          </div>
        </div>
      </div>
        <navbar>
            <div class="topnav">
                
                <ul class="navigation">
                  <a href="/index/login/search"><li>Home</li></a>
                <a href="/index/login/search/birds-and-pets"><li>Birds &amp; Pets</li></a>
                <a href="/index/login/search/account"><li>My Account</li></a>
                <a href="/index/login/search/contact-us"><li>Contacs us</li></a>
                <a href="/index/login/search/messanger"><li>Messanger</li></a> 
              &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  
              <a href="/index"> <li class="log-out"> <img  src="/assets/img/profile-pic.png" alt="Avatar" class="logout_pic">&nbsp;log out</li></a>
              </ul>
            </div>
        </navbar>
    </header>
      
      <!-- main section -->
    <main class="main__section">
      <div class="container">
        <div class="main__section__content">
          <h2>Update Account</h2>
            
            <img id="blah" src="/assets/img/profile-pic.png" alt="Avatar" class="profile_pic">
            
             <input type="file" hidden id="upload" accept=".jpg , .png , .jpeg , .bmp , .gif" onchange="document.getElementById('blah').src = window.URL.createObjectURL(this.files[0])"/>
            <label for="upload" >Update Your Photo</label>
            <br>
          <form action="#">
            <input
              type="text"
              name="firstname"
              id="firstname"
              class="main__input"
              placeholder="Edit First Name"
            />
            <input
              type="text"
              name="lastname"
              id="lastname"
              class="main__input"
              placeholder="Edit Last Name"
            />
            <input
              type="text"
              name="userid"
              id="userid"
              class="main__input"
              placeholder="Edit Your ID"
            />
            <input
              type="text"
              name="phone"
              id="phone"
              class="main__input"
              placeholder="Edit Your Phone Number"
            />
            <input type="password" name="password" class="main__input" placeholder="Update Your Password" />
            <div class="form__footer">
              <input type="submit" value="Update &amp; Save" class="main__btn5" />
            </div>
          </form>
        </div>
      </div>
    </main>
      
      <!-- footer section -->
    <footer class="main__footer">
      <div class="container">
        <div class="main__footer__content">
          <div class="main__footer__info">
            <div class="contacts">
              <p>Address:5 th Roxey, New Cairo, Cairo</p>
              <p>Email: email@yahoo.com</p>
              <p>Hotline:919989</p>
            </div>
            <div class="social__media">
              <a href="https://www.instagram.com" target="_blank"><img class="social__media__icon" src="/assets/img/social-icons/insta_icon.png" alt="" ></a>
              <a href="https://www.twitter.com" target="_blank" ><img class="social__media__icon" src="/assets/img/social-icons/twitter_icon.png" alt="" ></a>
              <a href="https://www.facebook.com" target="_blank"><img class="social__media__icon" src="/assets/img/social-icons/face_icon.png" alt="" /></a>
            </div>
          </div>
          <p class="copy__rights__area">CopyRights &#169; 2020 RVAS Egypt</p>
        </div>
      </div>
    </footer>
  </body>
</html>
